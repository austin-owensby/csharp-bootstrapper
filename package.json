{
	"name": "csharp-bootstrapper",
	"displayName": "C# Bootstrapper",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.60.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:csharp-bootstrapper.convertModel"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "csharp-bootstrapper",
					"title": "C# Bootstrapper",
					"icon": "resources/icon.svg"
				}
			]
		},
		"views": {
			"csharp-bootstrapper": [
				{
					"id": "csharp-bootstrapper-options",
					"name": "Bootstrapper Options"
				}
			]
		},
		"configuration": {
			"title": "C# Bootstrapper",
			"properties": {
				"C# Bootstrapper.frontendModelDirectory": {
					"type": "string",
					"default": "",
					"description": "The directory that frontend typescript models should be added."
				}
			}
		},
		"commands": [
			{
				"command": "csharp-bootstrapper.convertModel",
				"title": "Convert to Typescript"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "csharp-bootstrapper.convertModel",
					"when": "editorLangId == csharp"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.60.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
